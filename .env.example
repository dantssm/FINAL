# .env.example
# OpenRouter API for LLM (Grok, Claude, GPT-4, etc.)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENROUTER_MODEL=deepseek/deepseek-chat-v3.1:free
# RECOMMENDED (most reliable, no gibberish):
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
# OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free
# OPENROUTER_MODEL=qwen/qwen-2-7b-instruct:free

# Google Search API
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here
USE_JINA_READER=true

# Performance Settings
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE=1000

GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Jina AI Reader - 1000 requests/day FREE (no API key needed!)
USE_JINA_READER=true

# ===========================================
# EMBEDDINGS - Choose your speed/cost tradeoff
# ===========================================

# Option 1: LOCAL (FREE, slower on CPU, fast on GPU)
# EMBEDDING_PROVIDER=local
EMBEDDING_PROVIDER=voyage
VOYAGE_API_KEY=your_voyage_api_key_here

# Option 2: COHERE (FREE tier: 1000/month, FAST)
# EMBEDDING_PROVIDER=cohere
# COHERE_API_KEY=your_cohere_api_key_here

# Option 3: VOYAGE AI (FREE tier available, FAST)  
# EMBEDDING_PROVIDER=voyage
# VOYAGE_API_KEY=your_voyage_api_key_here

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================

# Cache settings
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE=1000

# Scraping concurrency (5-10 recommended)
MAX_CONCURRENT_SCRAPES=5

# Chunking (smaller = more accurate, larger = faster)
CHUNK_SIZE=600
CHUNK_OVERLAP=100

